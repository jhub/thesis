<launch>
    <arg name="gui" default="false"/>
    <arg name="sensor_record" default="true"/>
    <arg name="sim_time" default="60"/>
    <arg name="debug" default="false"/>
    <arg name="gps" default="true"/>
    <arg name="noisy" default="false"/>
    <arg name="stationary" default="false"/>
    <arg name= "state_tracker" default="false"/>

    <group if="$(arg gps)">
        <group if="$(arg noisy)">
            <group if="$(arg stationary)">
                <param name="save_file_prefix" type="string" value="/home/matt/thesis/experiment_data/one_stationary"/>
            </group>
            <group unless="$(arg stationary)">
                <param name="save_file_prefix" type="string" value="/home/matt/thesis/experiment_data/one_mobile"/>
            </group>
        </group>
        <group unless="$(arg noisy)">
            <group if="$(arg stationary)">
                <param name="save_file_prefix" type="string" value="/home/matt/thesis/experiment_data/one_stationary_noiseless"/>
            </group>
            <group unless="$(arg stationary)">
                <param name="save_file_prefix" type="string" value="/home/matt/thesis/experiment_data/one_mobile_noiseless"/>
            </group>
        </group>
    </group>
    <group unless="$(arg gps)">
        <group if="$(arg noisy)">
            <group if="$(arg stationary)">
                <param name="save_file_prefix" type="string" value="/home/matt/thesis/experiment_data/one_stationary_no_gps"/>
            </group>
            <group unless="$(arg stationary)">
                <param name="save_file_prefix" type="string" value="/home/matt/thesis/experiment_data/one_mobile_no_gps"/>
            </group>
        </group>
        <group unless="$(arg noisy)">
            <group if="$(arg stationary)">
                <param name="save_file_prefix" type="string" value="/home/matt/thesis/experiment_data/one_stationary_noiseless_no_gps"/>
            </group>
            <group unless="$(arg stationary)">
                <param name="save_file_prefix" type="string" value="/home/matt/thesis/experiment_data/one_mobile_noiseless_no_gps"/>
            </group>
        </group>
    </group>

    <param name="number_of_robots" type="int" value="1"/>
    <param name="sim_time" type="double" value="$(arg sim_time)"/>
    <param name="x_upper" type="double" value="5"/>
    <param name="x_lower" type="double" value="-5"/>
    <param name="y_upper" type="double" value="5"/>
    <param name="y_lower" type="double" value="-5"/>
    <param name="debug" type="bool" value="$(arg debug)"/>
    <param name="state_tracker" type="bool" value="$(arg state_tracker)"/>

    <include file="$(find cwru_turtlebot)/launch/gazebo/world_common.launch.xml">
        <arg name="debug" value="$(arg debug)"/>
        <arg name="gui" value="$(arg gui)"/>
    </include>

    <include file="$(find state_tracker)/launch/map_comparator.launch.xml">
        <arg name="state_tracker" value="$(arg state_tracker)"/>
    </include>

    <group ns="turtlebot1">
        <include if="$(arg stationary)" file="$(find cwru_turtlebot)/launch/robots/turtlebot_stationary.launch.xml">
            <arg name="model_name" value="turtlebot1"/>
            <arg name="x_pos" value="0"/>
            <arg name="y_pos" value="0"/>
            <arg name="sensor_record" value="$(arg sensor_record)"/>
            <arg name="gps" value="$(arg gps)"/>
            <arg name="noisy" value="$(arg noisy)"/>
        </include>
        <include unless="$(arg stationary)" file="$(find cwru_turtlebot)/launch/robots/turtlebot_2d.launch.xml">
            <arg name="model_name" value="turtlebot1"/>
            <arg name="x_pos" value="0"/>
            <arg name="y_pos" value="0"/>
            <arg name="sensor_record" value="$(arg sensor_record)"/>
            <arg name="gps" value="$(arg gps)"/>
            <arg name="noisy" value="$(arg noisy)"/>
        </include>
    </group>
</launch>
